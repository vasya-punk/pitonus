package Utils{		import flash.display.Bitmap;	import flash.events.Event;	import flash.display.BitmapData;	import flash.display.DisplayObject;	import flash.media.Video;	import flash.display.BlendMode;	import flash.geom.Point	import flash.geom.Rectangle;	import flash.geom.Matrix;		public function snapShot(mc:DisplayObject, scale:Number = 1):Bitmap{			 		var m:Matrix = new Matrix();		m.scale ( scale, scale );		var bmpData:BitmapData = new BitmapData(mc.width * scale, mc.height * scale, false, 0xFFFFFF);		bmpData.draw (mc,m);		var bmp:Bitmap = new Bitmap(bmpData);		return bmp;			 	}}